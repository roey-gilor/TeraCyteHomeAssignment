<Window x:Class="TeraCyteHomeAssignment.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeraCyteHomeAssignment"
        xmlns:scott="clr-namespace:ScottPlot;assembly=ScottPlot.WPF"
        mc:Ignorable="d"
        Title="TeraCyte Viewer" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- ===== Left Panel: Image ===== -->
        <Border Margin="5" Background="#222" CornerRadius="8" BorderBrush="#555" BorderThickness="1">
            <Image Source="{Binding CurrentImage}" Stretch="Uniform"/>
        </Border>

        <!-- ===== Right Panel ===== -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Title -->
                <RowDefinition Height="Auto"/>
                <!-- Stats -->
                <RowDefinition Height="Auto"/>
                <!-- Histogram label + connection -->
                <RowDefinition Height="*"/>
                <!-- Histogram grows -->
                <RowDefinition Height="Auto"/>
                <!-- History header -->
                <RowDefinition Height="150"/>
                <!-- History list -->
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0"
               Text="Inference Results"
               Foreground="White" FontSize="24"
               FontWeight="Bold" Margin="0,0,0,10"/>

            <!-- Stats -->
            <StackPanel Grid.Row="1" Margin="0,0,0,10">
                <TextBlock Text="Class:" Foreground="#AAA"/>
                <TextBlock Text="{Binding Results.classification_label}"
                   Foreground="White" FontSize="20" FontWeight="Bold"/>

                <Separator Margin="0,10,0,10"/>

                <TextBlock Text="Intensity Average:" Foreground="#AAA"/>
                <TextBlock Text="{Binding Results.intensity_average}" Foreground="White"/>

                <TextBlock Text="Focus Score:" Foreground="#AAA" Margin="0,5,0,0"/>
                <TextBlock Text="{Binding Results.focus_score}" Foreground="White"/>
            </StackPanel>

            <!-- Histogram title + connection -->
            <StackPanel Grid.Row="2">
                <TextBlock Text="Histogram"
                   Foreground="White"
                   FontSize="18"
                   Margin="0,10,0,5"/>

                <TextBlock Text="{Binding ConnectionStatus}"
                   Foreground="White"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>
            </StackPanel>

            <!-- Histogram plot -->
            <scott:WpfPlot Grid.Row="3"
                   x:Name="HistogramPlot"
                   Background="#111"
                   Margin="0,5,0,0"
                   MinHeight="450"/>

            <!-- History + Clear button -->
            <Grid Grid.Row="4" Margin="0,15,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="History"
                   Foreground="White"
                   FontSize="18"
                   VerticalAlignment="Center"/>

                <Button Grid.Column="1"
                Content="Clear"
                Background="#444"
                Foreground="White"
                BorderBrush="#666"
                Padding="6,2"
                Margin="10,0,0,0"
                Cursor="Hand"
                Click="ClearHistory_Click"/>
            </Grid>

            <!-- Scrollable history -->
            <ScrollViewer Grid.Row="5" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding History}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,5" Padding="5" Background="#222" CornerRadius="5" MouseDown="HistoryItem_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{Binding Thumbnail}" Width="60" Height="60" Margin="5"/>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Classification}" Foreground="LightGreen" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding IntensityAvg, StringFormat='Avg: {0:F1}'}" Foreground="White"/>
                                        <TextBlock Text="{Binding FocusScore, StringFormat='Focus: {0:F2}'}" Foreground="White"/>
                                        <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm:ss}'}"
                                           Foreground="Gray" FontSize="10"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

        </Grid>
    </Grid>
</Window>
