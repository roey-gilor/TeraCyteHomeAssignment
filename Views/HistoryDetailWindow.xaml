<Window x:Class="TeraCyteHomeAssignment.Views.HistoryDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="History Item Details"
        WindowStartupLocation="CenterScreen"
        Height="800" Width="1000"
        Background="#1E1E1E">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <!-- Full Image -->
        <Border BorderBrush="#555" BorderThickness="1" Margin="0,0,0,10">
            <Image Source="{Binding Thumbnail}" Stretch="Uniform"/>
        </Border>

        <!-- Info panel -->
        <StackPanel Grid.Row="1" Margin="10" Orientation="Vertical">
            <TextBlock Text="{Binding Classification}"
                       Foreground="LightGreen"
                       FontSize="28" FontWeight="Bold"/>

            <TextBlock Text="{Binding IntensityAvg, StringFormat='Avg Intensity: {0:F2}'}"
                       Foreground="White" FontSize="18" Margin="0,10,0,0"/>

            <TextBlock Text="{Binding FocusScore, StringFormat='Focus Score: {0:F2}'}"
                       Foreground="White" FontSize="18"/>

            <TextBlock Text="{Binding Timestamp, StringFormat='Captured: {0:HH:mm:ss dd/MM/yyyy}'}"
                       Foreground="#888" FontSize="14" Margin="0,10,0,0"/>

            <Button Content="Close"
                    Width="100" Height="35" Margin="0,20,0,0"
                    HorizontalAlignment="Left"
                    Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
